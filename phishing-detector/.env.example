# Environment variables for local development
# Copy this file to .env and update with your values

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# Model Paths (optional - leave empty to use pretrained)
EMAIL_MODEL_PATH=
URL_MODEL_PATH=

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/phishing_detector.log

# Web Interface
WEB_PORT=8501
API_URL=http://localhost:8000

# Data Paths
DATA_DIR=./data
MODEL_DIR=./models
LOGS_DIR=./logs

# Training Configuration
BATCH_SIZE=16
LEARNING_RATE=0.00002
NUM_EPOCHS=3
MAX_LENGTH=512

# Detection Thresholds
RISK_THRESHOLD_HIGH=0.8
RISK_THRESHOLD_MEDIUM=0.5
RISK_THRESHOLD_LOW=0.3

# Scoring Weights
EMAIL_WEIGHT=0.6
URL_WEIGHT=0.4
